@inject HelloWorld.Models.FormattingService Format

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["title"]</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <script type="text/javascript" src="~/javascript/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="~/javascript/JavaScript.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>

<body class="body">
    <div class="header">
        <img src="~/images/Logo_White.png" width="109" height="30">
        <h2>Employee Management System</h2>
        <div class="authentication">
            @if (User.Identity.IsAuthenticated)
            {
                string user = User.Identity.Name;

                <p>Welcome @user.Substring(0,1).ToUpper()@user.Substring(1, user.Length-1)</p>
                @using (Html.BeginForm("logout", "account", FormMethod.Post, new { @id = "logout" }))
                {
                    <a href="javascript: $('#logout').submit()">Logout</a>
                }
            }
            else
            {
                <a href="@Url.Action("login","account")">Login</a>
            }
        </div>
    </div>
    <div class="content">
        @RenderBody()
    </div>
    <div class="footer">
        <p>Korek EMS 2021 | &copy; All rights rederved</p>
        <p>ASP.Net Core Developer: Sarwan Hakm</p>
        <p>Current date: @Format.DateTimeFormat(new DateTime())</p>
    </div>
</body>

</html>
