@model HelloWorld.Models.Employees

@{
    string action = @ViewData["title"].ToString() == "Create action" ? "FormProcessor" : "EditProcessor";
}

@using (Html.BeginForm(FormMethod.Post, new { @action = action }))
{
<table class="table-create">
        @if (action == "EditProcessor")
        {
            ViewContext.Writer.Write(Html.TextBoxFor(x => x.id, null, new { @type = "hidden" }));
        }

    <tr>
        <th>Full name</th>
        <td>
            @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control",placeholder="Type your full name" })
            @Html.ValidationMessageFor(x => x.Name)
        </td>
    </tr>
    <tr>
        <th>Position</th>
        <td>
            @Html.TextBoxFor(x => x.Position, null, new { @class = "form-control", placeholder = "Type your position title" })
            @Html.ValidationMessageFor(x => x.Position)
        </td>
    </tr>
    <tr>
        <th>Department</th>
        <td>
            @Html.TextBoxFor(x => x.Department, null, new { @class = "form-control", placeholder = "Type department section" })
            @Html.ValidationMessageFor(x => x.Department)
        </td>
    </tr>
    <tr>
        <th>Email</th>
        <td>
            @Html.TextBoxFor(x => x.Email, null, new { @class = "form-control", placeholder = "Type your email address" })
            @Html.ValidationMessageFor(x => x.Email)
        </td>
    </tr>
    <tr>
        <th>Grade</th>
        <td>
            @Html.TextBoxFor(x => x.Grade, null, new { @class = "form-control", placeholder = "Type your grade level" })
            @Html.ValidationMessageFor(x => x.Grade)
        </td>
    </tr>
    <tr>
        <th>Gender</th>
        <td>
            @Html.TextBoxFor(x => x.Gender, null, new { @class = "form-control", placeholder = "Type your gender" })
            @Html.ValidationMessageFor(x => x.Gender)
        </td>
    </tr>
    <tr>
        <th><button type="submit">@{ ViewContext.Writer.Write(action == "FormProcessor" ? "Create" : "Update"); }</button></th>
    </tr>
</table>
}